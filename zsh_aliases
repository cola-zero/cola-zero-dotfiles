## .zsh_aliases
## Masahiro Koga
if [[ $OSTYPE = darwin* ]]; then
source /usr/local/Cellar/coreutils/8.14/aliases
alias ls='gls -F --color=auto'
alias emacs='/Applications/Emacs.app/Contents/MacOS/Emacs'
alias ec='/usr/local/bin/emacsclient -t -n'
alias et='/usr/local/bin/emacsclient -t -n'
alias ecn='/usr/local/bin/emacsclient -t'
fi

# color option can't use in solaris
if [[ $OSTYPE = linux-gnu ]]; then
alias ls='ls -F --color=auto'
alias ec='emacsclient -c -n'
alias et='emacsclient -t -n'
alias ecn='emacsclient -t'
fi
alias la='ls -lag'
alias l='ls -F'
alias eterm='xterm -en euc-jp'
alias gd='dirs -v; echo -n "select number: "; read newdir; cd +"$newdir"'
# alias screen='screen -s /bin/zsh'

# ruby development
alias be='bundle exec'
alias p='padrino'
alias r='rails'
