## .zsh_aliases
## Masahiro Koga
if [[ $OSTYPE = darwin* ]]; then
alias ls='ls -F --color=auto'
alias emacs='emacs -geometry 80x30'
alias ec='/opt/local/bin/emacsclient -c -n'
alias et='/opt/local/bin/emacsclient -t -n'
alias ecn='/opt/local/bin/emacsclient -t'
fi

# color option can't use in solaris
if [[ $OSTYPE = linux-gnu ]]; then
alias ls='ls -F --color=auto'
alias ec='emacsclient -c -n'
alias et='emacsclient -t -n'
alias ecn='emacsclient -t'
fi
alias la='ls -lag'
alias l='ls -F'
alias eterm='xterm -en euc-jp'
alias gd='dirs -v; echo -n "select number: "; read newdir; cd +"$newdir"'
# alias screen='screen -s /bin/zsh'
